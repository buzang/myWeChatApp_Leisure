<!--pages/home/home.wxml-->
<!-- 主体页面 -->
<view class="main-box">
  <!-- 搜索栏 -->
  <view class="searchbar">
    <mp-searchbar></mp-searchbar>
  </view>
  <!-- 轮播图区域 -->
  <view class="swiper">
    <swiper indicator-dots="true" autoplay="true">
      <swiper-item wx:for="{{swiperList}}" wx:key="swiperImageId">
        <navigator>
          <image src="../../images/youxian.png" mode="widthFix" />
        </navigator>
      </swiper-item>
    </swiper>

  </view>
  <!-- 可滑动分类区 -->
  <scroll-view scroll-x="true" enable-flex="true">
    <view
      wx:for="{{scrollViewList}}"
      wx:key="title_id"
      class="scrollview-item"
    >
      <navigator bind:tap="scrollchecked(title.id)">
        {{item.title}}
      </navigator>
    </view>
  </scroll-view>
</view>

